@model Chushka.ViewModels.Products.AllProductsIndexViewModel

@{
    this.ViewData["Title"] = "Home";
}

<div class="container-fluid text-center">
    <h2>Greetings, @User.Identity.Name!</h2>
    @if (User.IsInRole("Admin"))
    {
        <h4>Enjoy your work today!</h4>
    }
    else
    {
        <h4>Feel free to view and order any of our products.</h4>
    }
</div>
<hr class="hr-2 bg-dark" />
<div class="container-fluid product-holder">
    <div class="row d-flex justify-content-around">
        @foreach (var prod in Model.Products)
        {
            <a asp-controller="Products" asp-action="Details" asp-route-id="@prod.Id" class="col-md-2">
                <div class="product p-1 chushka-bg-color rounded-top rounded-bottom">
                    <h5 class="text-center mt-3">@prod.Name</h5>
                    <hr class="hr-1 bg-white" />
                    <p class="text-white text-center">@prod.Description</p>
                    <hr class="hr-1 bg-white" />
                    <h6 class="text-center text-white mb-3">$@prod.Price</h6>
                </div>
            </a>
        }
    </div>
</div>
