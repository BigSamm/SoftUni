@model Eventures.ViewModels.Orders.AllOrdersViewModel
@{ ViewData["Title"] = "All Orders"; }

<h1 class="text-center">All Orders</h1>
<hr class="hr-2" />
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Event</th>
            <th scope="col">Customer</th>
            <th scope="col">Ordered On</th>
        </tr>
    </thead>
    <tbody>
        @{ int index = 1; }
        @foreach (var item in Model.Orders)
        {
            <tr>
                <th scope="row">@index</th>
                <td>@item.Event</td>
                <td>@item.Customer</td>
                <td>@item.OrderedOnStr</td>
            </tr>

            index++;
        }
    </tbody>
</table>
