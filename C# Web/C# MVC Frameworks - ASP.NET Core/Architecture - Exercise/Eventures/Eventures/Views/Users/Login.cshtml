@model Eventures.ViewModels.Users.UserLoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center">Login</h1>
<hr class="w-50 hr-2" />
<form method="post" class="mx-auto w-50 text-center">
    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    <div class="form-group font-weight-bold">
        <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" class="form-control" placeholder="Username..." />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group font-weight-bold">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" placeholder="Password..." />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <input asp-for="RememberMe" />
            <label asp-for="RememberMe"></label>
        </div>
    </div>
    <div class="button-holder d-flex justify-content-center">
        <input type="submit" value="Login" class="btn eventures-bg-color" />
    </div>
</form>
<div class="text-center mt-3 mb-2"><a href="#">Forgot your password?</a></div>
<div class="text-center"><a asp-controller="Users" asp-action="Register">Register as a new user</a></div>
<hr class="hr-2 half-width" />
